<?xml version="1.0" encoding="UTF-8"?>
<!--

    This test file contains a template that is missing an edge. The attribute b of type B in class A, requires a
    relation (edge) from A to B. But that edge is not present in the structure part of the template. This error
    should be detected by the XML-parser.

-->
<templates>
    <template name="Template" superpattern="Super">
        <structure>
            <nodes>
                <node id="A" type="CLASS">
                    <attributes>
                        <!-- For this attribute there must be a relation between A and B -->
                        <attribute id="b" type="B"/>
                    </attributes>
                </node>
                <node id="B" type="CLASS"/>
                <node id="C" type="CLASS"/>
            </nodes>
            <edges>
                <!-- A relation between A and B is missing (intentionally) -->
                <edge id="CB" node1="C" node2="B"/>
            </edges>
        </structure>
        <conditions>
            <condition id="3" description="C inherits from B.">
                <rules>
                    <rule applies="CB"
                          topic="TYPE"
                          scope="RELATION"
                          operation="EQUALS"
                          value="INHERITANCE"/>
                </rules>
            </condition>
        </conditions>
    </template>
</templates>
    
