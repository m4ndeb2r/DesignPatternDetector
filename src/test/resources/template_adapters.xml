<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <template name="Adapter-ObjectAdapter-AbstractClass" superpattern="Adapter">
        <structure>
            <nodes>
                <node id="Client" type="CLASS">
                    <attributes>
                        <attribute id="adapter" type="Target"/>
                    </attributes>
                    <methods>
                        <method id="adapter.request"/>
                    </methods>
                </node>
                <node id="Target" type="CLASS"/>
                <node id="Adapter" type="CLASS">
                    <attributes>
                        <attribute id="adaptee" type="Adaptee"/>
                    </attributes>
                    <methods>
                        <method id="request"/>
                    </methods>
                </node>
                <node id="Adaptee" type="CLASS">
                    <methods>
                        <method id="specificRequest"/>
                    </methods>
                </node>
            </nodes>
            <edges>
                <edge id="ClientTarget" node1="Client" node2="Target"/>
                <edge id="AdapterAdaptee" node1="Adapter" node2="Adaptee"/>
                <edge id="AdapterTarget" node1="Adapter" node2="Target"/>
            </edges>
        </structure>
        <conditions>
            <condition id="1" description="The Client has a directed association with the Target.">
                <rules>
                    <rule applies="ClientTarget" scope="RELATION" topic="TYPE" operation="EQUALS"
                          value="ASSOCIATION_DIRECTED"/>
                </rules>
            </condition>
            <condition id="2" description="The Adapter has a directed association with the Adaptee.">
                <rules>
                    <rule applies="AdapterAdaptee" scope="RELATION" topic="TYPE" operation="EQUALS"
                          value="ASSOCIATION_DIRECTED"/>
                </rules>
            </condition>
            <condition id="3" description="The Adapter has a inheritance RELATION with the Target (abstract class).">
                <rules>
                    <rule applies="AdapterTarget" topic="TYPE" scope="RELATION" operation="EQUALS" value="INHERITANCE"/>
                </rules>
            </condition>
            <condition id="4" description="The Target is an abstract class.">
                <rules>
                    <rule applies="Target" scope="OBJECT" topic="MODIFIER_ABSTRACT" operation="EQUALS" value="true"/>
                </rules>
            </condition>
            <condition id="5"
                       description="The Adapter uses exactly one Adaptee. An Adaptee can be used by none or more Adapters.">
                <rules>
                    <rule applies="AdapterAdaptee" scope="RELATION" topic="CARDINALITY_LEFT" operation="EQUALS"
                          value="0..*"/>
                    <rule applies="AdapterAdaptee" scope="RELATION" topic="CARDINALITY_RIGHT" operation="EQUALS"
                          value="1"/>
                </rules>
            </condition>
            <condition id="6" description="The Adaptee attribute in the Adapter has a private visibility.">
                <rules>
                    <rule applies="adaptee" scope="OBJECT" topic="VISIBILITY" operation="EQUALS" value="private"/>
                </rules>
            </condition>
        </conditions>
    </template>

